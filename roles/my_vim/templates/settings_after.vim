" Terminal colors
set t_Co=256
" Toggle relative line numbering by default
set relativenumber
" Toggle wrap lines
set wrap
" NERDTree options
let NERDTreeWinSize = 30
" AirLine
let g:airline_powerline_fonts = 1
let g:airline#extensions#tabline#enabled = 1
let g:airline_theme='murmur'
" Color scheme
" colorscheme Tomorrow-Night-Bright
colorscheme solarized

" Syntax highlighting
syntax on

set tabstop=2
set shiftwidth=2
set smarttab
set expandtab
set hlsearch
set laststatus=2
set backspace=2
